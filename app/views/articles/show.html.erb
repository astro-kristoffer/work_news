<% content_for :title, @article.title %>
<h2><%= @article.title %></h2>


<% @images.each do |p| %>
  <%= image_tag(p.file.url, height: '250') %>
<% end %>
<p class="text">
  <%= @article.text %>
</p>

<div class="bottom">
  <%= link_to 'Редактировать', edit_article_path(@article), class: "btn btn-secondary" %>
  <%= link_to 'Назад', articles_path, class: "btn btn-secondary" %>
</div>