<% content_for :title, "Главная" %>
<h1>Новости астрономии</h1>

<%= link_to 'Добавить статью', new_article_path %>
<p>
  <%= form_for :q, url: search_path, method: 'get', local: true do |f| %>
    <%= label_tag(:q, "Найти статью:") %>
    <%= text_field_tag(:q, params[:q]) %>
    <%= submit_tag("Поиск") %>
<% end %>
</p>
<table>
  <thead>
    <tr>
      <th>Заголовок</th>
      <th>Текст</th>
    </tr>
  </thead>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Подробнее', article_path(article) %></td>
      <td><%= link_to 'Редактировать', edit_article_path(article) %></td>
      <td><%= link_to 'Удалить', article_path(article),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>
