<% content_for :title, "Главная" %>
<nav class="navbar navbar-light bg-light">
  <div class="navbar-brand">
    Новости астрономии и космонавтики
  </div>
  <%= link_to 'Добавить статью', new_article_path, class: "btn btn-secondary" %>
    <%= form_for :q, url: search_path, method: 'get', local: true do |f| %>
      <%= text_field_tag(:q, params[:q], size: 30, placeholder:"Найти статью") %>
      <%= submit_tag("Поиск") %>
    <% end %>
</nav>


<table class="table">
  <% @articles.each do |article| %>
  <div class="media">
    <div class="media-body">
      <tr>
        <td><h4 class="mt-3"><%= link_to article.title, article_path(article) %></h4>
        <p><%= article.text %></p><br>
          <%= link_to 'Подробнее', article_path(article), class: "btn btn-light" %>
        <td><%= link_to 'Редактировать', edit_article_path(article), class: "btn btn-light"%></td>
        <td><%= link_to 'Удалить', article_path(article), class: "btn btn-light",
                method: :delete,
                data: { confirm: 'Вы уверены?' } %></td>
    </div>
  </div>
  <% end %>


