<div class="modal-body">
  <%= form_with model: @article, remote: true do |f| %>
    <% if @article.errors.any? %>
      <div id="error_explanation" class="alert alert-danger" role="alert">
        <h3>
          Статья не сохранена из-за <%= pluralize(@article.errors.count, "ошибки","ошибок") %>:
        </h3>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :Заголовок, class: "control-label" %><br>
      <%= f.text_field :title, size: 50, placeholder: "Введите заголовок", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :Текст, class: "control-label" %><br>
      <%= f.text_area :text, size: "50x20", placeholder: "Введите текст статьи", class: "form-control" %><br>
      <%= f.fields_for :images, @article.images.build do |p| %>
      <div>
        <%= p.file_field :file, :multiple => true, name: "images[file][]", id: 'new_image' %>
      </div>
      <% end %>
      <%= f.submit "Сохранить статью", class: "btn btn-secondary", id: "up_btn" %>
    </div>
  <% end %>
</div>