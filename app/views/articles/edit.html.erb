<% content_for :title, "Редактировать новость" %>

<h1>Редактировать новость</h1>

<%= form_with model: @article, local: true do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :Заголовок %><br>
    <%= f.text_field :title %>
  </p>
 <p>
    <%= f.label :Текст %><br>
    <%= f.text_area :text, size: "150x20" %><br>
    <%= f.submit "Сохранить статью" %>
  </p>
<% end %>
<p>
  <%= render @article.images %>
</p>
<%= form_with model: [@article, @article.images.build], local: true do |f| %>
  <p>
    <%= f.file_field :file%>
    <%= f.submit 'Прикрепить изображение' %>
  </p>
<% end %>
<div class="bottom">
<%= link_to 'Назад', articles_path, class: "btn btn-light" %>
</div>